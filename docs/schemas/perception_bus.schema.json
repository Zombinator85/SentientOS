{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sentientos.local/schemas/perception_bus.schema.json",
  "title": "SentientOS Perception Bus",
  "type": "object",
  "required": [
    "event_type",
    "timestamp",
    "source",
    "extractor_id",
    "extractor_version",
    "confidence",
    "privacy_class",
    "provenance"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": [
        "perception.screen",
        "perception.audio",
        "perception.vision"
      ]
    },
    "timestamp": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "extractor_id": {
      "type": "string"
    },
    "extractor_version": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "privacy_class": {
      "type": "string",
      "enum": [
        "public",
        "internal",
        "private",
        "restricted",
        "sensitive"
      ]
    },
    "provenance": {
      "type": "object",
      "additionalProperties": true
    },
    "active_app": {
      "type": "string"
    },
    "window_title": {
      "type": "string"
    },
    "focused_element_hint": {
      "type": "string"
    },
    "text_excerpt": {
      "type": "string"
    },
    "cursor_position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "screen_geometry": {
      "type": "object",
      "properties": {
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "degraded": {
      "type": "boolean"
    },
    "degradation_reason": {
      "type": "string"
    },
    "sample_rate_hz": {
      "type": "integer"
    },
    "window_ms": {
      "type": "integer"
    },
    "features": {
      "type": "object"
    },
    "clipping_detected": {
      "type": "boolean"
    },
    "channel_count": {
      "type": "integer"
    },
    "device_hint": {
      "type": "string"
    },
    "raw_audio_retained": {
      "type": "boolean",
      "default": false
    },
    "redaction_applied": {
      "type": "boolean"
    },
    "raw_audio_reference": {
      "type": "string"
    },
    "frame_size": {
      "type": "object",
      "required": [
        "width",
        "height"
      ],
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "fps_estimate": {
      "type": [
        "number",
        "null"
      ],
      "minimum": 0
    },
    "faces_detected": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 0
    },
    "raw_frame_retained": {
      "type": "boolean",
      "default": false
    },
    "raw_frame_reference": {
      "type": "string"
    },
    "lighting_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "motion_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    }
  },
  "additionalProperties": false,
  "$defs": {
    "audio_features": {
      "type": "object",
      "required": [
        "rms_energy",
        "zcr",
        "spectral_centroid_hz",
        "spectral_rolloff_hz"
      ],
      "properties": {
        "rms_energy": {
          "type": "number"
        },
        "zcr": {
          "type": "number"
        },
        "spectral_centroid_hz": {
          "type": "number"
        },
        "spectral_rolloff_hz": {
          "type": "number"
        },
        "f0_hz_estimate": {
          "type": "number"
        },
        "speech_prob": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "tempo_bpm_estimate": {
          "type": "number"
        },
        "pauses_per_min": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "vision_features": {
      "type": "object",
      "required": [
        "face_present"
      ],
      "properties": {
        "face_present": {
          "type": "boolean"
        },
        "face_bbox": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "face_landmarks": {
          "type": "object",
          "required": [
            "format",
            "points"
          ],
          "properties": {
            "format": {
              "type": "string",
              "enum": [
                "mediapipe_468",
                "dlib_68",
                "none"
              ]
            },
            "points": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          },
          "additionalProperties": false
        },
        "gaze_vector": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        },
        "gaze_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "blink_rate_estimate": {
          "type": "number",
          "minimum": 0,
          "description": "blinks per minute"
        },
        "head_pose_rpy": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          },
          "description": "roll, pitch, yaw in degrees"
        },
        "head_pose_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "event_type": {
            "const": "perception.audio"
          }
        }
      },
      "then": {
        "required": [
          "sample_rate_hz",
          "window_ms",
          "features",
          "clipping_detected",
          "channel_count",
          "raw_audio_retained",
          "redaction_applied"
        ],
        "properties": {
          "features": {
            "$ref": "#/$defs/audio_features"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "event_type": {
            "const": "perception.vision"
          }
        }
      },
      "then": {
        "required": [
          "frame_size",
          "fps_estimate",
          "faces_detected",
          "features",
          "raw_frame_retained",
          "redaction_applied"
        ],
        "properties": {
          "features": {
            "$ref": "#/$defs/vision_features"
          }
        }
      }
    }
  ]
}
