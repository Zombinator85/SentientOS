{
  "$defs": {
    "audio_features": {
      "additionalProperties": false,
      "properties": {
        "f0_hz_estimate": {
          "type": "number"
        },
        "pauses_per_min": {
          "type": "number"
        },
        "rms_energy": {
          "type": "number"
        },
        "spectral_centroid_hz": {
          "type": "number"
        },
        "spectral_rolloff_hz": {
          "type": "number"
        },
        "speech_prob": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "tempo_bpm_estimate": {
          "type": "number"
        },
        "zcr": {
          "type": "number"
        }
      },
      "required": [
        "rms_energy",
        "zcr",
        "spectral_centroid_hz",
        "spectral_rolloff_hz"
      ],
      "type": "object"
    },
    "vision_features": {
      "additionalProperties": false,
      "properties": {
        "blink_rate_estimate": {
          "description": "blinks per minute",
          "minimum": 0,
          "type": "number"
        },
        "face_bbox": {
          "items": {
            "maximum": 1,
            "minimum": 0,
            "type": "number"
          },
          "maxItems": 4,
          "minItems": 4,
          "type": "array"
        },
        "face_landmarks": {
          "additionalProperties": false,
          "properties": {
            "format": {
              "enum": [
                "mediapipe_468",
                "dlib_68",
                "none"
              ],
              "type": "string"
            },
            "points": {
              "items": {
                "items": {
                  "maximum": 1,
                  "minimum": 0,
                  "type": "number"
                },
                "maxItems": 2,
                "minItems": 2,
                "type": "array"
              },
              "type": "array"
            }
          },
          "required": [
            "format",
            "points"
          ],
          "type": "object"
        },
        "face_present": {
          "type": "boolean"
        },
        "gaze_confidence": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "gaze_vector": {
          "items": {
            "type": "number"
          },
          "maxItems": 3,
          "minItems": 3,
          "type": "array"
        },
        "head_pose_confidence": {
          "maximum": 1,
          "minimum": 0,
          "type": "number"
        },
        "head_pose_rpy": {
          "description": "roll, pitch, yaw in degrees",
          "items": {
            "type": "number"
          },
          "maxItems": 3,
          "minItems": 3,
          "type": "array"
        }
      },
      "required": [
        "face_present"
      ],
      "type": "object"
    }
  },
  "$id": "https://sentientos.local/schemas/perception_bus.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "event_type": {
            "const": "perception.audio"
          }
        }
      },
      "then": {
        "properties": {
          "features": {
            "$ref": "#/$defs/audio_features"
          }
        },
        "required": [
          "sample_rate_hz",
          "window_ms",
          "features",
          "clipping_detected",
          "channel_count",
          "raw_audio_retained",
          "redaction_applied"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "event_type": {
            "const": "perception.vision"
          }
        }
      },
      "then": {
        "properties": {
          "features": {
            "$ref": "#/$defs/vision_features"
          }
        },
        "required": [
          "frame_size",
          "fps_estimate",
          "faces_detected",
          "features",
          "raw_frame_retained",
          "redaction_applied"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "event_type": {
            "const": "perception.gaze"
          }
        }
      },
      "then": {
        "properties": {
          "calibration_confidence": {
            "maximum": 1,
            "minimum": 0,
            "type": "number"
          },
          "calibration_state": {
            "enum": [
              "uncalibrated",
              "calibrating",
              "calibrated",
              "unknown"
            ],
            "type": "string"
          },
          "confidence": {
            "maximum": 1,
            "minimum": 0,
            "type": "number"
          },
          "display_geometry": {
            "additionalProperties": false,
            "properties": {
              "height": {
                "minimum": 1,
                "type": "number"
              },
              "width": {
                "minimum": 1,
                "type": "number"
              },
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "type": "object"
          },
          "gaze_point_norm": {
            "items": {
              "maximum": 1,
              "minimum": 0,
              "type": "number"
            },
            "maxItems": 2,
            "minItems": 2,
            "type": [
              "array",
              "null"
            ]
          },
          "gaze_point_px": {
            "items": {
              "type": "number"
            },
            "maxItems": 2,
            "minItems": 2,
            "type": "array"
          },
          "gaze_vector": {
            "items": {
              "type": "number"
            },
            "maxItems": 3,
            "minItems": 3,
            "type": "array"
          },
          "raw_samples_reference": {
            "type": "string"
          },
          "raw_samples_retained": {
            "default": false,
            "type": "boolean"
          },
          "redaction_applied": {
            "type": "boolean"
          },
          "screen_id": {
            "type": "string"
          },
          "source_pipeline": {
            "enum": [
              "eye_tracker_sdk",
              "camera_estimate",
              "os_accessibility",
              "none"
            ],
            "type": "string"
          }
        },
        "required": [
          "gaze_point_norm",
          "confidence",
          "calibration_state",
          "source_pipeline",
          "raw_samples_retained",
          "redaction_applied"
        ]
      }
    }
  ],
  "properties": {
    "active_app": {
      "type": "string"
    },
    "browser_domain": {
      "type": "string"
    },
    "browser_url_full": {
      "type": "string"
    },
    "calibration_confidence": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    },
    "calibration_state": {
      "enum": [
        "uncalibrated",
        "calibrating",
        "calibrated",
        "unknown"
      ],
      "type": "string"
    },
    "channel_count": {
      "type": "integer"
    },
    "clipping_detected": {
      "type": "boolean"
    },
    "confidence": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    },
    "cursor_position": {
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "degradation_reason": {
      "type": "string"
    },
    "degraded": {
      "type": "boolean"
    },
    "device_hint": {
      "type": "string"
    },
    "display_geometry": {
      "additionalProperties": false,
      "properties": {
        "height": {
          "minimum": 1,
          "type": "number"
        },
        "width": {
          "minimum": 1,
          "type": "number"
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "event_type": {
      "enum": [
        "perception.screen",
        "perception.audio",
        "perception.vision",
        "perception.gaze"
      ],
      "type": "string"
    },
    "extractor_id": {
      "type": "string"
    },
    "extractor_version": {
      "type": "string"
    },
    "faces_detected": {
      "minimum": 0,
      "type": [
        "integer",
        "null"
      ]
    },
    "features": {
      "type": "object"
    },
    "focused_element_hint": {
      "type": "string"
    },
    "fps_estimate": {
      "minimum": 0,
      "type": [
        "number",
        "null"
      ]
    },
    "frame_size": {
      "additionalProperties": false,
      "properties": {
        "height": {
          "minimum": 1,
          "type": "integer"
        },
        "width": {
          "minimum": 1,
          "type": "integer"
        }
      },
      "required": [
        "width",
        "height"
      ],
      "type": "object"
    },
    "gaze_point_norm": {
      "items": {
        "maximum": 1,
        "minimum": 0,
        "type": "number"
      },
      "maxItems": 2,
      "minItems": 2,
      "type": [
        "array",
        "null"
      ]
    },
    "gaze_point_px": {
      "items": {
        "type": "number"
      },
      "maxItems": 2,
      "minItems": 2,
      "type": "array"
    },
    "gaze_vector": {
      "items": {
        "type": "number"
      },
      "maxItems": 3,
      "minItems": 3,
      "type": "array"
    },
    "lighting_score": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    },
    "motion_score": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    },
    "privacy_class": {
      "enum": [
        "public",
        "internal",
        "private",
        "restricted",
        "sensitive"
      ],
      "type": "string"
    },
    "process_name": {
      "type": "string"
    },
    "provenance": {
      "additionalProperties": true,
      "type": "object"
    },
    "raw_artifact_retained": {
      "default": false,
      "type": "boolean"
    },
    "raw_audio_reference": {
      "type": "string"
    },
    "raw_audio_retained": {
      "default": false,
      "type": "boolean"
    },
    "raw_frame_reference": {
      "type": "string"
    },
    "raw_frame_retained": {
      "default": false,
      "type": "boolean"
    },
    "raw_samples_reference": {
      "type": "string"
    },
    "raw_samples_retained": {
      "default": false,
      "type": "boolean"
    },
    "redaction_applied": {
      "type": "boolean"
    },
    "redaction_notes": {
      "type": "string"
    },
    "sample_rate_hz": {
      "type": "integer"
    },
    "screen_geometry": {
      "additionalProperties": false,
      "properties": {
        "height": {
          "type": "number"
        },
        "width": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "screen_id": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "source_pipeline": {
      "enum": [
        "eye_tracker_sdk",
        "camera_estimate",
        "os_accessibility",
        "none"
      ],
      "type": "string"
    },
    "text_excerpt": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "ui_context": {
      "additionalProperties": false,
      "properties": {
        "doc_title": {
          "type": "string"
        },
        "kind": {
          "enum": [
            "browser",
            "editor",
            "terminal",
            "unknown"
          ],
          "type": "string"
        },
        "workspace_hint": {
          "type": "string"
        }
      },
      "required": [
        "kind"
      ],
      "type": "object"
    },
    "window_class": {
      "type": "string"
    },
    "window_ms": {
      "type": "integer"
    },
    "window_title": {
      "type": "string"
    }
  },
  "required": [
    "event_type",
    "timestamp",
    "source",
    "extractor_id",
    "extractor_version",
    "confidence",
    "privacy_class",
    "provenance"
  ],
  "title": "SentientOS Perception Bus",
  "type": "object"
}
