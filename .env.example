# Example environment configuration for SentientOS utilities

# Shared secret for relay authentication
RELAY_SECRET=

# Telegram bot tokens
BOT_TOKEN_GPT4O=
BOT_TOKEN_MIXTRAL=
BOT_TOKEN_DEEPSEEK=

# Telegram webhook secret
TG_SECRET=your-telegram-secret

# Relay configuration
RELAY_URL=http://localhost:5000/relay
OLLAMA_URL=http://localhost:11434

# Model slugs
GPT4_MODEL=openai/gpt-4o
MIXTRAL_MODEL=mixtral
DEEPSEEK_MODEL=deepseek-ai/deepseek-r1-distill-llama-70b-free

# Embedding model for memory search
EMBED_MODEL=all-MiniLM-L6-v2

# Path for storing memory fragments
MEMORY_DIR=logs/memory

# Voice configuration
TTS_ENGINE=pyttsx3
TTS_COQUI_MODEL=tts_models/en/vctk/vits
AUDIO_LOG_DIR=logs/audio
# Optional advanced TTS
ELEVEN_API_KEY=
ELEVEN_VOICE=Rachel
BARK_SPEAKER=v2/en_speaker_6

# Emotion detection backend: "heuristic" or "neural"
EMOTION_DETECTOR=heuristic
